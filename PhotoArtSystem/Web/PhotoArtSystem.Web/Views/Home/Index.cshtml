@using PhotoArtSystem.Web.Controllers

@{
    ViewBag.Title = "Home Page";
}

@(Html.Action<HomeController>(c => c.GetPhotoArtServices()))

@section scripts{
    @Scripts.Render("~/bundles/vegas")
    <script>
        (function () {
            $("body").vegas({
                preload: true,
                delay: 7000,
                transitionDuration: 3500,
                slides: [
                    { src: '@ViewBag.Slide1' },
                    { src: '@ViewBag.Slide2' }
                ],
                overlay: true
            });
        }())
    </script>
}
@using PhotoArtSystem.Web.ViewModels.HomePageModels
@model IEnumerable<CarouselDataViewModel>

@{
    var itemActive = "active";
}

<div id="photoartsystem-carousel-home" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    @*<ol class="carousel-indicators">
            <li data-target="#photoartsystem-carousel-home" data-slide-to="0" class="active"></li>
        </ol>*@
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @for (var i = 0; i < @Model.Count(); i++)
        {
            if (i != 0)
            {
                itemActive = string.Empty;
            }

            <div class="item @itemActive text-center">
                <img src="@Model.ElementAt(i).CoverImage" alt="Image" class="img-responsive" />                
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#photoartsystem-carousel-home" role="button" data-slide="prev">
        <span class="icon-prev" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#photoartsystem-carousel-home" role="button" data-slide="next">
        <span class="icon-next" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
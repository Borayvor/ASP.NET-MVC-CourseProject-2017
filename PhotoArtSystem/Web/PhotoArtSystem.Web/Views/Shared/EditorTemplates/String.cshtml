@model string

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "col-md-2 col-lg-1 control-label" })
    <div class="col-md-10 col-lg-11">
        @Html.TextBoxFor(m => m, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m, string.Empty, new { @class = "text-danger" })
    </div>
</div>
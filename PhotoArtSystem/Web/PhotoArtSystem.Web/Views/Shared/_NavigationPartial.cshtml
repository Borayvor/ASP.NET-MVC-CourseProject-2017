@using PhotoArtSystem.Web.Controllers
@using PhotoArtSystem.Web.Areas.Administration.Controllers
@using PhotoArtSystem.Web.Areas.Forum.Controllers

<header>
    <div class="navbar navbar-inverse navbar-fixed-top photoartsystem-navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand photoartsystem-navbar-brand" href="@(Url.Action<HomeController>(c => c.Index()))">
                    <img src="~/Images/logoOriginal.png" />
                </a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @(Html.ActionLink<HomeController>(HtmlConstants.HomeLinkName, c => c.Index()))
                    </li>
                    <li>
                        @(Html.ActionLink<PhotocourseController>(HtmlConstants.PhotocoursesLinkName, c => c.Index()))
                    </li>
                    <li>
                        @(Html.ActionLink<AboutUsController>(HtmlConstants.AboutUsLinkName, c => c.Index()))
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole(AuthConstants.AdministratorRoleName))
                    {
                        <li>
                            @(Html.ActionLink<MainPageController>(HtmlConstants.ForumAreaName, c => c.Index()))
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@HtmlConstants.AdministrationAreaName <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    @(Html.ActionLink<PhotocourseSetupController>(HtmlConstants.NewPhotocourseLinkName, c => c.NewPhotocourse(), new { area = HtmlConstants.AdministrationAreaName }))
                                </li>
                                @*<li>
                                    @(Html.ActionLink<PhotocourseSetupController>(HtmlConstants.NewPhotocourseLinkName, c => c.NewPhotocourse(), new { area = HtmlConstants.AdministrationAreaName }))
                                </li>*@
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</header>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="The description of my page" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/toolsCss")
    @Styles.Render("~/Content/siteCss")
</head>
<body>
    @Html.Partial("_NavigationPartial")
    <div id="loading">
        <span class="vh-center">
            <i class="fa fa-cog fa-spin fa-5x"></i>
        </span>
    </div>
    <div class="photoartsystem-content container-fluid">
        <div class="photoartsystem-content-body">
            @RenderBody()
        </div>       
        @Html.Partial("_FooterPartial")
    </div>       

    @* -- Scripts -- *@
    @Scripts.Render("~/bundles/jquery")    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/siteJs")
    @RenderSection("scripts", required: false)
</body>
</html>

@using PhotoArtSystem.Web.ViewModels.PhotocourseModels
@model PhotocourseDetailsViewModel

<div class="row">
    @foreach (var image in Model.Images)
    {
        <div class="col-sm-3">
            <img src="@image.UrlPath" class="img-thumbnail img-responsive" />
        </div>
    }
</div>
<div class="row">
    <div class="photoartsystem-card-text text-center">
        <h2 class="photoartsystem-card-title">@Model.Name</h2>
        <div>@Model.DurationHours <span>astronomic hours.</span></div>        
        <div class="photoartsystem-card-description">
            @Html.Raw(@Model.Description)
        </div>
        <div>@Html.Raw(@Model.OtherInfo)</div>
    </div>
    <div class="col-sm-4">
        <ul>
            @foreach (var student in Model.Students)
            {
                <li>
                    @student.FirstName
                </li>
            }
        </ul>
    </div>
</div>


